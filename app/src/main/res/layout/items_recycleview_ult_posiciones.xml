<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/black"

        >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imagenUsuario_ult"
        android:layout_alignStart="@+id/imagenUsuario_ult">

        <ImageView
            android:id="@+id/imagenUsuario_ult"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/brujula_litle"

             />

        <TextView
            android:id="@+id/txtNombre_ult"
            android:text="Nombre"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imagenUsuario_ult"
            android:layout_toRightOf="@+id/imagenUsuario_ult"
            android:layout_toEndOf="@+id/imagenUsuario_ult"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/FechaHora_ult"
            android:text="FechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombre_ult"
            android:layout_toRightOf="@+id/imagenUsuario_ult"
            android:layout_toEndOf="@+id/imagenUsuario_ult"
            android:textColor="@android:color/white"
             />

        <TextView
            android:id="@+id/Longitud_ult"
            android:text="Longitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FechaHora_ult"
            android:layout_toRightOf="@+id/imagenUsuario_ult"
            android:layout_toEndOf="@+id/imagenUsuario_ult"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/Latitud_ult"
            android:text="Latitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Longitud_ult"
            android:layout_toRightOf="@+id/imagenUsuario_ult"
            android:layout_toEndOf="@+id/imagenUsuario_ult"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/Localizacion_ult"
            android:text="Localizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Latitud_ult"
            android:layout_toRightOf="@+id/imagenUsuario_ult"
            android:layout_toEndOf="@+id/imagenUsuario_ult"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/Velocidad_ult"
            android:text="Velocidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Localizacion_ult"
            android:layout_toRightOf="@+id/imagenUsuario_ult"
            android:layout_toEndOf="@+id/imagenUsuario_ult"
            android:textColor="@android:color/white"/>




    </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>